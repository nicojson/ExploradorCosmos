<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.explorandoelcosmos.controllers.registerController"
      prefHeight="600.0" prefWidth="700.0"
      alignment="CENTER" spacing="30.0"
      styleClass="root" stylesheets="@styles.css">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Text text="[ SOLICITUD DE ACCESO ]" styleClass="title" style="-fx-font-size: 28px;"/>

    <VBox spacing="20.0" maxWidth="350.0">
        <TextField fx:id="newUserFld" promptText="Asignar ID de Operador" styleClass="search-field"/>
        <PasswordField fx:id="newPasswordFld" promptText="Definir Clave de Acceso" styleClass="search-field"/>
        <PasswordField fx:id="confirmPasswordFld" promptText="Confirmar Clave de Acceso" styleClass="search-field"/>
    </VBox>

    <VBox spacing="15.0" alignment="CENTER">
        <Button fx:id="registerBtn" text="ENVIAR SOLICITUD" onAction="#onRegisterButtonClick" styleClass="form-button" prefWidth="350.0"/>
        <HBox alignment="CENTER" spacing="5">
            <Text text="Â¿Ya tienes credenciales?" styleClass="form-text"/>
            <Button fx:id="cancelBtn" text="Volver al Acceso" onAction="#onCancelButtonClick" styleClass="link-button"/>
        </HBox>
    </VBox>

</VBox>
