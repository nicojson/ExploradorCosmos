<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.explorandoelcosmos.controllers.registerController"
      stylesheets="@styles.css" styleClass="root">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="15" alignment="CENTER" styleClass="main-container">
        <Text text="Crear Cuenta" fill="white">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Nuevo Usuario"/>
            <TextField fx:id="newUserFld" promptText="Introduce un nombre de usuario"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Contrase単a"/>
            <PasswordField fx:id="newPasswordFld" promptText="Introduce una contrase単a"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Confirmar Contrase単a"/>
            <PasswordField fx:id="confirmPasswordFld" promptText="Confirma tu contrase単a"/>
        </VBox>

        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="cancelBtn" text="Cancelar" onAction="#onCancelButtonClick"/>
            <Button fx:id="registerBtn" text="Registrarse" onAction="#onRegisterButtonClick"/>
        </HBox>
    </VBox>

</VBox>
